@model CIPA.Models.Candidato

<h2>Cadastrar Candidato</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumeroPartido" class="control-label"></label>
        <input asp-for="NumeroPartido" class="form-control" />
        <span asp-validation-for="NumeroPartido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>